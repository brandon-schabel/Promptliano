{
  "name": "@promptliano/database",
  "version": "0.1.0",
  "description": "Drizzle ORM database layer for Promptliano - 87% storage code reduction",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "migrate": "bun run src/migrations/migrate.ts",
    "generate": "drizzle-kit generate --config=drizzle.config.cjs",
    "studio": "bash -lc 'drizzle-kit studio --config=drizzle.config.cjs --port ${DRIZZLE_STUDIO_PORT:-4983}'"
  },
  "dependencies": {
    "@promptliano/config": "workspace:*",
    "@hono/zod-openapi": "^1.1.0",
    "@promptliano/schemas": "workspace:*",
    "@promptliano/shared": "workspace:*",
    "drizzle-orm": "^0.40.0",
    "drizzle-zod": "^0.8.3",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "better-sqlite3": "^11.6.0",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "drizzle",
    "orm",
    "sqlite",
    "database",
    "typescript",
    "schema"
  ],
  "author": "Promptliano Team",
  "license": "MIT"
}