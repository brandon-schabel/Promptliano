<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow unsigned executable memory for Monaco Editor and other JS execution -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Network permissions for API communication -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Allow server sidecar to listen on localhost -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- File system access for project files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Allow execution of the server sidecar binary -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    
    <!-- Disable library validation to allow loading of external binaries -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
</dict>
</plist>