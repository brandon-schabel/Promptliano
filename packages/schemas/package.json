{
  "name": "@promptliano/schemas",
  "version": "0.9.0",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "test": "bun test src/",
    "test:watch": "bun test --watch src/",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build && bun run test",
    "publish:dry": "npm publish --dry-run",
    "docs:generate": "typedoc",
    "docs:markdown": "typedoc --plugin typedoc-plugin-markdown --out docs/api-markdown",
    "docs:watch": "typedoc --watch",
    "docs:serve": "npx serve docs/api",
    "docs:clean": "rm -rf docs/api docs/api-markdown"
  },
  "files": [
    "dist",
    "src",
    "index.ts",
    "README.md"
  ],
  "dependencies": {
    "@promptliano/config": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
