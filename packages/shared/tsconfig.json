{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "declaration": true,
    "declarationMap": false,
    "composite": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "downlevelIteration": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["bun-types"],
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "emitDeclarationOnly": false,
    "noEmit": false
  },
  "include": ["*.ts", "src/**/*.ts", "schema.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/test-*.ts",
    "src/tests/**",
    "src/test-utils/**"
  ]
}
