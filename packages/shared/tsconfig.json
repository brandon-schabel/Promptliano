{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["bun-types"],
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "emitDeclarationOnly": false,
    "noEmit": true
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "schema.ts",
    "../services/src/utils/get-full-project-summary.ts",
    "../services/src/utils/path-utils.ts",
    "../services/src/utils/json-scribe.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
