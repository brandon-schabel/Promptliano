{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020"
    ],
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "bun-types"
    ],
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "emitDeclarationOnly": false,
    "noEmit": true
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "schema.ts",
    "../server/src/utils/response-utils.ts",
    "../server/src/utils/parse-timestamp.test.ts",
    "../server/src/utils/parse-timestamp.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}