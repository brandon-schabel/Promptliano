{
  "name": "octoprompt",
  "module": "index.ts",
  "version": "0.2.3",
  "type": "module",
  "scripts": {
    "setup": "bun run scripts/setup.ts",
    "dev": "bun run scripts/start-dev.ts",
    "client:dev": "bun run scripts/start-client-dev.ts",
    "server:dev": "bun run scripts/start-server-dev.ts",
    "stop": "bun run scripts/stop.ts",
    "build": "bun run scripts/build.ts",
    "format": "prettier --write .",
    "test": "bun test",
    "studio": "cd packages/shared && bun run studio",
    "migrate": "cd packages/shared && bun run migrate",
    "push": "cd packages/shared && bun run push"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@types/picomatch": "^3.0.1",
    "bun-types": "latest",
    "prettier": "^3.0.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@bnk/router": "1.0.5",
    "@bnk/backend-websocket-manager": "^1.0.0",
    "picomatch": "^4.0.2",
    "zod": "^3.23.8"
  }
}